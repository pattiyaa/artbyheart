<!DOCTYPE html>
<html>
  <head>
    <title>Artbyheart</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render :template=> 'share/social/facebookpixel'%>
    <%= yield :fbmetatag if content_for? :fbmetatag %>
  </head>

  <body class="no-sidebar">
    <div id="header" >
      <div class="inner">
        <header>
        <h1><a href="/" id="logo"><%= cl_image_tag("logo.png",height: "80", :alt => "Art by Heart logo", :class=>"img-responsive center-block" ) %></a></h1>
        </header>
        <%= render :template=> 'share/locale'%>
      </div>
    </div>
    <!-- Nav -->
    <%= render :template=> 'share/menu'%>
    <!-- body -->
    <%= yield %>
    <!-- footer -->
    <%= render  template: 'share/footer' %>
    <div id="modal-holder"></div> 
    <%= javascript_tag do %>
      if (window.opener != null){
      window.opener.location = '';
      }
      window.close();
    <% end %>
  </body>
</html>
