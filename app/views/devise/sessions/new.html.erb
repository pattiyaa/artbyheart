<% content_for :title, t('session.title') %>
<div class="center">
<!-- <p class="notice"><%= notice %></p> -->
<p class="alert"><%= alert %></p>
<!-- :remote => :true, :'data-type' => :json -->
<%= simple_form_for(resource, as: resource_name,url: session_path(resource_name), :html=> { class: 'signin',:id => 'login-box', :data => {:type => :json} },:remote => :true) do |f| %>
 <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-user fa-2"></i></span>
    <input id="email" type="text" class="form-control" name="email" placeholder="Email">
  </div>
  
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-lock fa-2"></i></span>
    <input id="password" type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <div class="actions">
    <%= f.submit t('session.signin') %>
  </div>
<% end %>

<%= render "devise/shared/forget" %> 
<%= render "devise/sessions/option" %>
</div>
<script type="text/javascript">
     $('.js-popup').click(function() {
        centerPopup($(this).attr('href'), $(this).attr('data-width'), $(this).attr('data-height'));
        return false;
    });
</script>