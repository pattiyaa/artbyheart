<% if user_signed_in? && !current_user.blank? %>
<div class="image fit profile">
<%= image_tag  current_user.image, :class=>"mini" %>
</div>
<span> <p><%= t(:hi)%>	<%=  current_user.name %></p></span>
<%= link_to t(:signout), destroy_user_session_path, :method => :destroy %>
<% else %>
<%= link_to  new_user_session_path ,data: { modal: true} do%>
	<i class="fa fa-user"></i>&nbsp<span class="text-uppercase"><%=t(:signin)%></span>
<%end%>
<% end %>